<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Clima Já - Registrar Usuário</title>
    <!-- Estilos principais -->
    <link rel="stylesheet" href="/styles/css/loginStyle.css" />
    <!-- Font Awesome para ícones -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="icon" type="imagex/png" href="/assets/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png"/>
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png"/>
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png"/>

    <!-- Scripts de interação -->
     <script defer src="/src/scripts/handlers/loginHandler.js"></script>
    <script defer src="/src/scripts/handlers/showPasswordHandler.js"></script>
    <script defer src="/src/scripts/handlers/themeLoaderHandler.js"></script>
  </head>
  <body>
    <main class="form-container">
      <header class="form-header">
        <h1 class="form-title">Acesse sua conta</h1>
        <a href="/auth/registro" class="btn-default" aria-label="Ir para Login">
          <i class="fa-solid fa-right-to-bracket"></i>
        </a>
      </header>

      <form action="/user/login" method="post" class="form" novalidate>
        <div class="input-container">
          <div class="input-box">
            <label for="email" class="form-label">E-mail</label>
            <div class="input-field">
              <input
                type="email"
                name="email"
                id="email"
                class="form-control"
                placeholder="Digite seu e-mail"
                required
              />
              <i class="fa-regular fa-envelope"></i>
            </div>
          </div>

          <div class="input-box">
            <label for="password" class="form-label">Senha</label>
            <div class="input-field">
              <input
                type="password"
                name="password"
                id="password"
                class="form-control"
                placeholder="Digite sua senha"
                required
              />
              <i class="fa-regular fa-eye-slash password-icon"></i>
            </div>
          </div>
        </div>

        <button type="submit" class="btn-default">
          <i class="fa-solid fa-check"></i>
          Entrar
        </button>

        <div id="server-error" class="error-message" style="display: none"></div>
      </form>
    </main>
  </body>
</html>
